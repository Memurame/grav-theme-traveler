{% extends 'partials/base.html.twig' %}

{% block main %}
	{% if page.header.http_response_code == false %}
		<section class="section-headerimage" style="background-image: url('{{ page.media[page.header.image].cropZoom(1920,450).url }}')">
			<h1 class="heading">{{ page.header.title }}</h1>
		</section>
	{% endif %}
		<section class="page section-error {{ page.header.http_response_code ? 'httperror' : 'customerror' }}">
			<span class="errorcode">{{ page.header.http_response_code }}</span>
			<div class="markdown">
				{{ page.content|raw }}
			</div>
			<a href="{{ home_url }}" class="button button-white">zur Startseite</a>
		</section>
{% endblock %}
